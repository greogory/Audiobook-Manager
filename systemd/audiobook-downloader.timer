[Unit]
Description=Audiobook Download Timer (check for new audiobooks)
PartOf=audiobook.target

[Timer]
# Run 30 minutes after boot
OnBootSec=30min

# Then run every 6 hours
OnUnitActiveSec=6h

# Add randomized delay to avoid thundering herd
RandomizedDelaySec=5min

# Persist timer across reboots
Persistent=true

[Install]
WantedBy=audiobook.target timers.target
