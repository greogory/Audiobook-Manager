[Unit]
Description=Audiobooks Library HTTP to HTTPS Redirect
Documentation=https://github.com/TheBoscoClub/Audiobook-Manager
After=network-online.target audiobook-proxy.service
Wants=audiobook-proxy.service network-online.target
# Ensure /opt BTRFS subvolume is mounted before starting (prevents intermittent CHDIR failures)
RequiresMountsFor=/opt/audiobooks

[Service]
Type=simple
User=audiobooks
Group=audiobooks
WorkingDirectory=/opt/audiobooks/library/web-v2

# Load configuration from /etc/audiobooks/audiobooks.conf
EnvironmentFile=/etc/audiobooks/audiobooks.conf
Environment=PYTHONUNBUFFERED=1

# Only start if port is not already in use
ExecStartPre=/bin/sh -c '! /usr/bin/ss -tlnp | /usr/bin/grep -q ":${AUDIOBOOKS_HTTP_REDIRECT_PORT} "'
ExecStart=/usr/bin/python3 /opt/audiobooks/library/web-v2/redirect_server.py

Restart=on-failure
RestartSec=5
# Use journal logging (query with: journalctl -u audiobooks-redirect)
StandardOutput=journal
StandardError=journal
SyslogIdentifier=audiobooks-redirect

# Security hardening
NoNewPrivileges=yes
ProtectSystem=strict
ReadOnlyPaths=/etc/audiobooks /opt/audiobooks
# Data directory for audiobooks database and cache
ReadWritePaths=/var/lib/audiobooks
ProtectHome=yes
PrivateTmp=yes

[Install]
WantedBy=audiobook.target multi-user.target
